<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/color_gray" />
            <solid android:color="@color/white"/>
            <corners android:radius="5dp" />
        </shape>
    </item>

    <item android:gravity="center_vertical|right" android:right="8dp">
        <layer-list>
            <item android:width="12dp" android:height="20dp"  android:gravity="center" android:bottom="10dp">
                <rotate
                    android:fromDegrees="0"
                    android:toDegrees="0">
                    <shape android:shape="rectangle">
                        <solid android:color="#BF360C" />
                        <stroke android:color="#BF360C" android:width="1dp"/>
                    </shape>
                </rotate>
            </item>
            <item android:width="20dp" android:height="10dp" android:bottom="21dp" android:gravity="center">
                <shape android:shape="rectangle">
                    <solid android:color="@color/white"/>
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>